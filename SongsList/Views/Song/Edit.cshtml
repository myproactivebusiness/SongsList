@model Song
@{ 
    ViewBag.Title = ViewBag.Action + " song";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <input type="hidden" asp-for="SongId" />

    <button class="btn btn-warning" type="submit">@ViewBag.Action</button>
    <a class="btn badge-light" asp-controller="Home" asp-action="Index">Cancel</a>
</form>